{% extends 'layouts/app.html.twig' %}
{% block title %}Quizert - Categories{% endblock %}
{% block content %}

    {% include'layouts/topnav.html.twig' %}
    <section class="content">
    {% include 'layouts/carousel.html.twig' %}


    <div class="container" style="margin-top:20px;">
        <div class="row">
            <div class="col-lg-8 col-md-8">
               <div class="mainpagediv">
                <div class="titlequiz" style="margin-bottom: 20px; border-bottom: 3px solid #d2c413;">
                    <span>Categories</span>
                </div>
                <div class="utilities" style="padding:0px; box-shadow: 0 0 0 !important;">
                    <div id="categories" class="answercontainer alsolikecontainer" style="box-shadow: 0 0 0 !important;">
                        {% for category in categoriesDB %}
                            <transition name="fade">
                                <div v-if="show{{ category.id }}"  class="answer category alsolikequiz boxshadow{{ category.id }}" v-cloak style="border-top-left-radius: 5px; border-bottom-left-radius: 5px;" onclick="redirectcategory({{ category.id }})">
                                    <div class="categoryinfo" style="overflow: hidden;  padding: 10px;height: 70px; font-size: 16px;">
                                        {{ category.category}}<br>
                                        <a style="font-size: 12px;">Quiz Count: {{ category.quizcount  }}</a>
                                    </div>
                                </div>
                            </transition>
                         {% endfor %}
                    </div>
                </div>
               </div>
            </div>
           {% include 'layouts/sidebar.html.twig' %}
       </div>
    </div>


    </section>
    {% include 'layouts/footer.html.twig' %}
{% endblock %}